{
  "name": "turbo-next",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "deploy": "turbo run deploy",
    "build-web": "turbo run build --filter={apps/web}...",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
